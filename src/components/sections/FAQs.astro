---
import FAQ from "../molecules/FAQ.astro";
import { faqs } from "../../constant";
---

<section id="faqs" class="relative flex flex-col w-screen h-full overflow-hidden bg-gradient-to-b from-slate-900 via-blue-900 to-teal-900 py-20" style="margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%);">
    <div class="flex flex-col justify-center items-center max-w-4xl mx-auto text-center mb-12 px-4 relative z-10">
        <h2 class="text-4xl md:text-5xl font-bold text-white drop-shadow-lg mb-4">
            Frequently Asked Questions
        </h2>
        <p class="text-lg md:text-xl text-white/90 max-w-2xl">
            Find answers to common questions about the R17,300 PathPulse leaderboard competition.
        </p>
    </div>

    <div class="w-full max-w-3xl mx-auto px-4 relative z-10">
        {faqs.map((faq, index) => (
            <div class="mb-4">
                <FAQ key={index} question={faq.question} answer={faq.answer} />
            </div>
        ))}
    </div>
</section>
